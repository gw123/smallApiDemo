<script type="text/javascript">
    var _csrf_token = '<?=Yii::$app->request->csrfToken ?>';
    function show_box(id) {
        jQuery('.widget-box.visible').removeClass('visible');
        jQuery('#'+id).addClass('visible');
    }

    $('#login_btn').click(function () {
        return;
        var username  = $("#loginForm [name='username']").val();
        var password  = $("#loginForm [name='password']").val();
        var remeberMe = $("#loginForm [name='rememberMe']").is(":checked")
        console.log( username , password , remeberMe);

        UserService.login(username ,password,remeberMe , function (response) {
            if(response.status==1)
            {
              window.location.href = '/user/index';
            }else {
                $('#login_tip').text(response.msg);
            }
        });

    });

    $('#reg_btn').click(function () {
        var email     = $("#regForm [name='email']").val();
        var username  = $("#regForm [name='username']").val();
        var password  = $("#regForm [name='password']").val();
        var repassword  = $("#regForm [name='repassword']").val();
        var argeement = $("#regForm [name='argeement']").is(":checked");



        if(!argeement)            $('#regForm .form-tip').text( '请同意用户协议' );
        if(password!=repassword)  $('#regForm .form-tip').text( '两次输入密码不一致' );
        console.log( email, username , password , argeement );
        UserService.signup(email,username,password , function (response) {
            console.log(response)
            if(response.status==1)
            {
               $.alert('注册成功 ,请登陆账号.');
                window.location.reload();
            }else{
                var msg   = response.msg;

                 $('#regForm .form-tip').text( msg );
            }
        })
    })
</script>

